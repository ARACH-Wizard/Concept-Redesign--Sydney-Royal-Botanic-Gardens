---
const { title = 'Sydney Botanic Gardens', description = 'Discover the beauty of the Sydney Botanic Gardens.' } = Astro.props;
---

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;900&family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">

    <link rel="icon" href="/favicon.ico" />
  </head>
