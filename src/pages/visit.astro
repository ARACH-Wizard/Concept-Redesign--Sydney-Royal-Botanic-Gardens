---
import Base from '../layouts/Base.astro';
import Nav from '../components/nav.astro';
import Cta from '../components/cta.astro';
import PageTransition from '../components/transition.astro';

import { Image } from 'astro:assets';
import visitHeader from '../../src/assets/visitHeader.webp';
---

<html>
<Base title="Visit â€” Sydney Botanic Gardens" description="Explore the lush gardens, open daily from 7AM to sunset."/> 
<body>
    <PageTransition />
    <Nav />
    
    <section>
        <div class="titleContainer">
            <div class="slide-wrapper">
                <h1 class="slide-up">VISIT</h1>
            </div>
        </div>
        <div class="grid container">
            <div class="holder">
                <div>
                    <h2>ENTRY CONDITIONS</h2>
                    <p>Entry into the Garden is free except for special ticketed events.</p>
                    
                    <button>
                        <span>CALL</span>
                    </button>
                </div>
            </div>
            <div class="holder">
                <div>
                    <h2>GETTING HERE</h2>
                    <p>A green sanctuary located in the heart of Sydney, only a 5 minute walk from the city centre.</p>
                    
                    <button>
                        <span>EMAIL</span>
                    </button>
                </div>
            </div>
            <div class="holder" style="border-right:none;">
                <div>
                    <h2>ACCESSIBILITY</h2>
                    <p>Most areas of the Garden are accessible by walker and wheelchair.</p>
                </div>
            </div>
        </div>
        <Image src={visitHeader} class="headerImage" alt="Mushrooms  in a dense rainforest." />
        
    </section>
    
    
</body>
</html>
<style>
    .titleContainer{
        position: absolute;
        top: 1vw;
        left: 1vw;
        z-index: 4;
    }
    
    .titleContainer h1{
        font-family: "Playfair Display", serif;
        font-style: normal;
        font-weight: 600;
        font-size: 100px;
        line-height: 0.73;
        color: #FFFFFF;
        margin: 0;
    }
    
    button{
        margin: 0 auto;
        background: #FFFFFF;
        border-radius: 50px;
        padding: 9px 28px;
        border:none;
        cursor: pointer;
        transition: background 0.3s ease;
    }
    
    button:hover {
        background: #f0f0f0;
    }
    
    button span{
        font-family: 'Inter', sans-serif;
        font-style: normal;
        font-weight: 900;
        font-size: 30px;
        color: #000000;
    }
    
    section{
        position: relative;
        max-width:100vw;
        max-height:100svh;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    body{
        margin: 0;
    }
    
    h2 {
        font-family: "Inter", sans-serif;
        font-style: normal;
        font-weight: 700;
        font-size: 48px;
        line-height: 58px;
        text-align: center;
        color: #FFFFFF;
        margin-bottom:2rem;
        margin-top: 0;
    }
    
    p{
        font-family: "Inter", sans-serif;
        font-style: normal;
        font-weight: 500;
        font-size: 30px;
        line-height: 36px;
        text-align: center;
        color: #FFFFFF;
        margin: 0;
        margin-bottom:2rem;
    }
    
    .holder>div{
        position: relative;
        top: 30vh;
        display: flex;
        flex-direction: column;
    }
    
    .headerImage {
        max-width: 100vw;
        max-height: 100svh;
        width: 100vw;
        height: 100vh;
        position: absolute;
        inset: 0;
        object-fit: cover;
        z-index: 0;
        filter: blur(5px);
        transform: scale(1.3);
        transition: transform 2.0s cubic-bezier(0.65, 0, 0.35, 1), 
        filter 1.5s cubic-bezier(0.65, 0, 0.35, 1);
        transform-origin: 50% 50%;
    } 
    
    .headerImage.animate-in {
        transform: scale(1);
        filter: blur(8px);
    }
    
    .grid{
        display:grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        position: relative;
        z-index: 1;
        width: 100%;
        height: 100%;
    }
    
    .holder{
        background: rgba(40, 40, 40, 0.2);
        border-right: 2px solid rgba(217, 217, 217, 0.5);
        justify-content: center;
        flex-direction: column;
        align-items: center;
        padding-left:5vw;
        padding-right: 5vw;
    }
    .slide-wrapper {
        overflow: hidden;
    }
    
    .slide-up {
        display: inline-block;
        transform: translateY(100%);
        opacity: 0;
    }
    
    .slide-up.animate {
        animation: slide-up 1.85s cubic-bezier(0.65, 0, 0.35, 1) forwards;
    }
    
    @keyframes slide-up {
        0% { transform: translateY(100%); opacity: 0; }
        100% { transform: translateY(0); opacity: 1; }
    }
    
    @media (max-width: 768px) {
        .grid{
            display: flex;
            flex-direction: column;
            gap: 5vh;
            justify-content: center;
        }
        .titleContainer h1{
            font-size:60px;
        }
        
        .titleContainer{
            top:3vw;
            left:3vw;
        }
        h2 {
            font-size: 32px;
            line-height: 38px;
        }
        
        p{
            font-size: 20px;
            line-height: 24px;
        }
        
        .holder>div{
            top: 0;
        }
        .holder{
            background:none;
        }
    }
</style>
<script>
    window.addEventListener('load', () => {
        const headerImage = document.querySelector('.headerImage');
        const heading = document.querySelector('.titleContainer .slide-up');
        
        if (headerImage) {
            // Animate image scale
            headerImage.classList.add('animate-in');
            
            // Wait for image animation to finish (match CSS transition duration)
            setTimeout(() => {
                if (heading) {
                    heading.classList.add('animate');
                }
            }, 2000); // 2s matches your headerImage transform duration
        }
    });
</script>
